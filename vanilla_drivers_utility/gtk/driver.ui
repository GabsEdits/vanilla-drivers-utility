<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="DriverRow" parent="AdwActionRow">
    <child type="suffix">
      <object class="GtkBox">
            <property name="valign">center</property>
        <child>
          <object class="GtkImage" id="img_installed">
            <property name="icon-name">object-select-symbolic</property>
            <property name="visible">false</property>
          </object>
        </child>
        <child>
          <object class="GtkImage" id="img_install">
            <property name="icon-name">list-add-symbolic</property>
            <property name="visible">false</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="btn_restart">
            <property name="label" translatable="true">Restart Now</property>
            <property name="visible">false</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>